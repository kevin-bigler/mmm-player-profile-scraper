{
  "name": "player-profile-scraper",
  "version": "1.0.0",
  "description": "Scrapes player profiles from nintendo's website. Can be triggered to scrape on demand. Can also return any previously scraped profile data at any point in time.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "start-watch": "cross-env NODE_ENV=production nodemon ./bin/www",
    "test": "cross-env NODE_ENV=test mocha tests/*.js",
    "test-watch": "cross-env NODE_ENV=test mocha -w app.js tests/*.js"
  },
  "author": "Kevin Bigler",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "chalk": "^1.1.3",
    "express": "^4.15.3"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "cross-env": "^5.0.1",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  }
}
